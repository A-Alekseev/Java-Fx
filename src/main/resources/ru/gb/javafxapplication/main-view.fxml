<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.gb.javafxapplication.Controller">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>

    <TextArea fx:id="historyArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
    <HBox spacing="5">
        <TextField fx:id="userMessageField" HBox.hgrow="ALWAYS"/>
        <Button text="Send" defaultButton="true" onAction="#clickSendButton"/>
    </HBox>

</VBox>
